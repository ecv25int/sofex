<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="14-add-provider-type-to-provider" author="copilot">
        <addColumn tableName="provider">
            <column name="provider_type_id" type="BIGINT"/>
        </addColumn>
        <addForeignKeyConstraint 
            baseTableName="provider"
            baseColumnNames="provider_type_id"
            referencedTableName="provider_type"
            referencedColumnNames="id"
            constraintName="fk_provider_type"/>
    </changeSet>

</databaseChangeLog>

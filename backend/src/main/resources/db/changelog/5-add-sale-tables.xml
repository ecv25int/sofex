<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="5" author="copilot">
        <createTable tableName="sale">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date" type="TIMESTAMP"/>
            <column name="total" type="DECIMAL(10,2)"/>
        </createTable>
        <createTable tableName="sale_item">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sale_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT"/>
            <column name="name" type="VARCHAR(100)"/>
            <column name="quantity" type="INT"/>
            <column name="price" type="DECIMAL(10,2)"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="sale_item" baseColumnNames="sale_id"
            constraintName="fk_saleitem_sale" referencedTableName="sale" referencedColumnNames="id"/>
        <createIndex tableName="sale_item" indexName="idx_saleitem_sale_id">
            <column name="sale_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
